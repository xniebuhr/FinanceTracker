{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "dependencyDashboard": true,
  "timezone": "America/Chicago",
  "schedule": ["before 4am"],
  "prCreation": "immediate",
  "enabledManagers": ["npm", "nuget"],
  "includePaths": ["**/*"],
  "ignorePaths": ["**/node_modules/**", "**/test/**"],
  
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchPackagePatterns": ["^@angular/"],
      "groupName": "Angular Firmware"
    },
    {
      "matchPackagePatterns": ["^System\\.", "^Microsoft\\.Extensions", "^Microsoft\\.AspNetCore"],
      "groupName": ".NET Core Framework"
    }
  ],
  
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "labels": ["security"],
    "schedule": ["at any time"] 
  },
  
  "ignoreTests": false
}
