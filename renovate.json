{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "dependencyDashboard": true,
  "timezone": "America/Chicago",
  "schedule": [
    "before 4am"
  ],
  "prCreation": "immediate",
  "enabledManagers": [
    "npm",
    "nuget"
  ],
  "includePaths": [
    "**/*"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/test/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "groupName": "Angular Firmware",
      "matchPackageNames": [
        "/^@angular//"
      ]
    },
    {
      "groupName": ".NET Core Framework",
      "matchPackageNames": [
        "/^System\\./",
        "/^Microsoft\\.Extensions/",
        "/^Microsoft\\.AspNetCore/"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "labels": [
      "security"
    ],
    "schedule": [
      "at any time"
    ]
  },
  "ignoreTests": false
}
